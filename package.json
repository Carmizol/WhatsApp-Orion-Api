{
  "name": "whatsapp-api",
  "version": "1.0.0",
  "description": "WhatsApp Messenger Sender Api Solo SoftWare Ömer (ORION)",
  "main": "electron-main.js",
  "author": "Ömer Çarmizol :)",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.whatsapp.api",
    "productName": "WhatsApp API",
    "copyright": "Copyright © 2025",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**/*",
      "node_modules/whatsapp-web.js/**/*"
    ],
    "files": [
      "**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!.wwebjs_auth/**/*",
      "!logs/**/*",
      "C:/WhatsAppApiLog/**/*"
    ],
    "extraResources": [
      {
        "from": "db-config.json",
        "to": "db-config.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "artifactName": "WhatsApp Api V1.${ext}",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "shortcutName": "WhatsApp API",
      "language": "1055"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "qrcode": "^1.5.4",
    "whatsapp-web.js": "^1.23.0",
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}